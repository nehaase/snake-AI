void getmove5s2() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    if (i_player > i_food) {
        i_player_sug --;
        checkmove();
        if (move_ok) {
            i_player = i_player_sug;
            nextmove = 5;
        } else {
            getmove2s2_2();
            nextmove = 2;
        }
    } else {
        getmove2s2_2();
        nextmove = 2;
    }
}

//uturn
void getmove_uturn() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    i_player_sug ++;
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        nextmove = 1;
    } else {
        getmove2s2_2();
        nextmove = 2;
    }
}

void getmove_down() {
    //
}

void getmove2s2() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    //check for food
    if (j_player == j_food) {
        //go up towards food
        getmove5s2();
    } else {
        j_player_sug ++;
        checkmove();
        if (move_ok) {
            j_player = j_player_sug;
            nextmove = 2;
        } else {
            getmove3s2();
        }
    }
}

void getmove1s2() {
    i_player_sug = i_player;
    j_player_sug = j_player;

    i_player_sug ++;
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        nextmove = 1;
    } else {
        getmove2s2();
    }
}

void getmove_state2() {
    switch(nextmove) {
        case 1:
            getmove1s2();
            break;
        case 2:
            getmove2s2();
            break;
        case 3:
            getmove3s2();
            break;
        case 4:
            getmove4s2();
            break;
        case 5:
            getmove5s2();
            break;
        case 6:
            getmove_down();
        default:
            getmove1s2();
            break;
    }
}


void create_direction_1_2() {
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            // create horizontal movement map (i)
            if (i % 2 == 0) {
                direction_map_1[i][j] = 2;
            } else {
                direction_map_1[i][j] = 4;
            }
            // create vertical movement map (j)
            if (j % 2 == 0) {
                direction_map_2[i][j] = 1;
            } else {
                direction_map_2[i][j] = 3;
            }
        }
    }
}

void create_direction_3() {
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            
            // base grid 1 and 3
            if (j % 2 == 0) {
                direction_map_3[i][j] = 1;
            } else if (j % 2 != 0) {
                direction_map_3[i][j] = 3;
            }
            
            // turning points 2
            if (i == 1 && j % 2 != 0) {
                direction_map_3[i][j] = 2;
            } else if(i == boardsize-1 && j % 2 == 0) {
                direction_map_3[i][j] = 2;
            }
            
            // special grid 3423
            if (j == boardsize-2) {
                if (i % 2 == 0) {
                    direction_map_3[i][j] = 2;
                } else {
                    direction_map_3[i][j] = 3;
                }
            } else if(j == boardsize-1) {
                if (i % 2 == 0) {
                    direction_map_3[i][j] = 3;
                } else {
                    direction_map_3[i][j] = 4;
                }
            }

            // top row 1444444444
            if (i == 0) {
                direction_map_3[i][j] = 4;
            }
            if (i == 0 && j == 0) {
                direction_map_3[i][j] = 1;
            }
        }
    }
}

void check_corner() {
    // check upper right corner for food!!
    if (i_food == 0 && j_food == boardsize-1) {
        direction_map_3[1][boardsize-1] = 3;
        corner_changed = true;
    }
}

void getmove_state3() {
    if (corner_changed) {
        direction_map_3[1][boardsize-1] = 4;
        corner_changed = false;
    }
    check_corner();
    
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    switch(direction_map_3[i_player][j_player]) {
        case 1:
            // DOWN
            i_player_sug ++;
            break;
        case 2:
            // RIGHT
            j_player_sug ++;
            break;
        case 3:
            // UP
            i_player_sug --;
            break;
        case 4:
            // LEFT
            j_player_sug --;
            break;
        default:
            // HELP I DONT KNOW
            getmove_state1();
            break;
    }
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        j_player = j_player_sug;
    } else {
        cout << "MOVE NOT POSSIBLE... LOOKING FOR SOLUTIONS!!!" << endl;
        getmove_state1();
    }
}



void draw_direction_3() {
    cout << "direction matrix 3:\n" << endl;
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            cout << direction_map_3[i][j] << " ";
        }
        cout << "" << endl;
    }
}

void draw_direction_1_2() {
    cout << "direction matrix 1:\n" << endl;
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            cout << direction_map_1[i][j] << " ";
        }
        cout << "" << endl;
    }
    cout << "direction matrix 2:\n" << endl;
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            cout << direction_map_2[i][j] << " ";
        }
        cout << "" << endl;
    }
}

void game() {
    while (forever) {
        alive = true;
        create_player();
        create_board();
        scored = true;
        score = 2;
        moves_done = 0;
        i_player = 5;
        j_player = 5;
        recalculations = 0;
        moves_considered = 0;
        create_direction_3();

        //game loop:
        while (alive) {
            checks();
            player_map[i_player][j_player] = score; //draw new player position
            if (scored) {
                 spawn_new_food(); //spawn new food
                scored = false;
            } else {             
                //reduce snake values by 1
                update_player();
            }
            cout << "---------------------------"<< endl;
            cout << "score: " << score << endl;
            cout << "moves: " << moves_done << endl;
            cout << "considered: " << moves_considered << endl;
            cout << "calculations: " << recalculations << endl;
            if (!alive) {
                cout << "game over" << endl;
                break;
            }
            if (score >= 4*boardsize-4) {
                getmove_state3();
            } else if (score >= 2*boardsize) {
                getmove_state2();
            } else {
                getmove_state1();
            }
            draw_board();
            moves_done ++;
            sleep();
        }
        
        cout << "---------------------------"<< endl;
        if (score > highscore) {
            highscore = score;
            cout << "NEW HIGHSCORE: " << highscore << endl;
        } else {
            cout << "score: " << score << endl;
            cout << "highscore: " << highscore << endl;
        }
        cout << "movements: " << moves_done << endl;
        cout << "considered: " << moves_considered << endl;
        cout << "calculations: " << recalculations << endl;
        sleep2();
    }
}



int main() {
    //create_direction_3();
    //draw_direction_3();
    
    create_direction_1_2();
    //draw_direction_1_2();
    
    game();
}

