#include <iostream>
#include <random>
#include <termios.h> //not in use
#include <unistd.h>//not in use
#include <thread>
using namespace std;

const int boardsize = 11;

int score;
int highscore = 37;
int boardvalue[boardsize][boardsize];
int player[boardsize][boardsize];
int movements = 0;
int lastmove;

//starting position
int i_player = 3;
int j_player = 3;

int i_player_sug;
int j_player_sug;

//food position
int i_food;
int j_food;

bool alive = true;
bool scored = false;
bool move_ok;
bool forever = true;

void sleep() {
    this_thread::sleep_for(std::chrono::milliseconds(200));
}

void sleep2() {
    this_thread::sleep_for(std::chrono::milliseconds(5000));
}

void create_board() {
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            boardvalue[i][j] = 0;
        }
    }
}

void player_input() {
    string input;
    cin >> input;
    if (input == "w") {
        //up
        i_player = i_player-1;
    } else if (input == "a") {
        //left
        j_player = j_player-1;
    } else if (input == "s") {
        //down
        i_player = i_player+1;
    } else if (input == "d") {
        //right
        j_player = j_player+1;
    }
}

void draw_player() {
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            player[i][j] = 0;
        }
    }
}

void update_player() {
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            if (player[i][j] != 0)
                player[i][j] --;
        }
    }
}

void spawn_new_food() {
    bool free_space = false;
    int random_number_1 = 0;
    int random_number_2 = 0;
    while (!free_space) {
        random_device rd;
        mt19937 gen(rd());
        uniform_int_distribution<> distribution(0, boardsize-1);
        random_number_1 = distribution(gen);
        random_number_2 = distribution(gen);
        
        //check if free space
        if (boardvalue[random_number_1][random_number_2] == 0 && player[random_number_1][random_number_2] == 0) {
            free_space = true;
            boardvalue[random_number_1][random_number_2] = -1;
        }
    }
    //cout << "ran1: " << random_number_1 << endl;
    //cout << "ran2: " << random_number_2 << endl;
    
    i_food = random_number_1;
    j_food = random_number_2;
}

void draw_board() {
    for (int i = 0; i < boardsize; i++) {
        for (int j = 0; j < boardsize; j++) {
            if (player[i][j] != 0) {
                cout << "0 ";
            } else {
                if (i == i_food && j == j_food) {
                    cout << "X ";
                } else {
                    cout << "- ";
                }
            }
        }
        cout << "" << endl;
    }
}

void check_scored() {
    if (i_player == i_food && j_player == j_food) {
        scored = true;
        score ++;
    }
}

void check_alive_boundaries() {
    if (i_player > boardsize-1 || j_player > boardsize-1 || i_player < 0 || j_player < 0)
        alive = false;
}

void check_alive_snake() {
    if (player[i_player][j_player] != 0)
        alive = false;
}

void checks() {
    check_alive_boundaries();
    check_alive_snake();
    check_scored();
}

void getmove1() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    if (i_player < i_food) {
        i_player_sug ++;
    } else if (i_player > i_food) {
        i_player_sug --;
    } else if (j_player < j_food) {
        j_player_sug ++;
    } else if (j_player > j_food) {
        j_player_sug --;
    }
}

void getmove2() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    if (j_player < j_food) {
        j_player_sug ++;
    } else if (j_player > j_food) {
        j_player_sug --;
    } else if (i_player < i_food) {
        i_player_sug ++;
    } else if (i_player > i_food) {
        i_player_sug --;
    }
}

void getmove3() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    i_player_sug ++;
}

void getmove4() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    j_player_sug ++;
}

void getmove5() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    i_player_sug --;
}

void getmove6() {
    i_player_sug = i_player;
    j_player_sug = j_player;
    
    j_player_sug --;
}

void getmove7() {
    cout << "HELP I DONT KNOW WHERE TO GO" << endl;
}

void checkmove() {
    if (player[i_player_sug][j_player_sug] != 0) {
        move_ok = false;
    } else if (i_player_sug < 0) {
        move_ok = false;
    } else if (j_player_sug < 0) {
        move_ok = false;
    } else if (i_player_sug > boardsize-1) {
        move_ok = false;
    } else if (j_player_sug > boardsize-1) {
        move_ok = false;
    } else {
        move_ok = true;
    }
}

void getmove_state1() {
    getmove1();
    checkmove();
    if (!move_ok) {
        getmove2();
        checkmove();
        if (!move_ok) {
            getmove3();
            checkmove();
            if (!move_ok) {
                getmove4();
                checkmove();
                if (!move_ok) {
                    getmove5();
                    checkmove();
                    if (!move_ok) {
                        getmove6();
                        checkmove();
                        if (!move_ok) {
                            getmove7();
                        } else {
                            i_player = i_player_sug;
                            j_player = j_player_sug;
                        }
                    } else {
                        i_player = i_player_sug;
                        j_player = j_player_sug;
                    }

                } else {
                    i_player = i_player_sug;
                    j_player = j_player_sug;
                }
            } else {
                i_player = i_player_sug;
                j_player = j_player_sug;
            }
        } else {
            i_player = i_player_sug;
            j_player = j_player_sug;
        }
    } else {
        i_player = i_player_sug;
        j_player = j_player_sug;
    }
}



void getmove3s2_2() {
    i_player_sug = i_player;
    i_player_sug --;
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        lastmove = 3;
    } else {
        //getmove4s2();
        cout << "THIS SHOULD NOT HAVE HAPPENED!" << endl;
    }
}

void getmove2s2_2() {
    j_player_sug = j_player;
    j_player_sug ++;
    checkmove();
    if (move_ok) {
        j_player = j_player_sug;
        lastmove = 2;
    } else {
        getmove3s2_2();
    }
}

void getmove1s2_2() {
    i_player_sug = i_player;
    i_player_sug ++;
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        lastmove = 1;
    } else {
        getmove2s2_2();
    }
}

void getmove4s2() {
    j_player_sug = j_player;
    j_player_sug --;
    checkmove();
    if (move_ok) {
        j_player = j_player_sug;
        lastmove = 4;
    } else {
        getmove1s2_2();
    }
}


void getmove3s2() {
    i_player_sug = i_player;
    i_player_sug --;
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        lastmove = 3;
    } else {
        getmove4s2();
    }
}

void getmove2s2() {
    j_player_sug = j_player;
    j_player_sug ++;
    checkmove();
    if (move_ok) {
        j_player = j_player_sug;
        lastmove = 2;
    } else {
        getmove3s2();
    }
}

void getmove1s2() {
    i_player_sug = i_player;
    i_player_sug ++;
    checkmove();
    if (move_ok) {
        i_player = i_player_sug;
        lastmove = 1;
    } else {
        getmove2s2();
    }
}

void getmove_state2_2() {
    switch(lastmove) {
        case 1:
            getmove1s2();
        case 2:
            getmove2s2();
        case 3:
            getmove3s2();
        case 4:
            getmove4s2();
        default:
            getmove1s2();
    }
}


void getmove_state2() {
    getmove1s2();
    checkmove();
    if (!move_ok) {
        getmove2s2();
        checkmove();
        if (!move_ok) {
            getmove3s2();
            checkmove();
            if (!move_ok) {
                getmove4s2();
                checkmove();
                if (!move_ok) {
                    getmove1s2();
                    checkmove();
                    if (!move_ok) {
                        getmove2s2();
                        checkmove();
                        if (!move_ok) {
                            getmove3s2();
                            checkmove();
                            if (!move_ok) {
                                getmove4s2();
                                checkmove();
                                if (!move_ok) {
                                    getmove_state1();
                                } else {
                                    j_player = j_player_sug;
                                    lastmove = 4;
                                }
                            } else {
                                i_player = i_player_sug;
                                lastmove = 3;
                            }
                        } else {
                            j_player = j_player_sug;
                            lastmove = 2;
                        }
                    } else {
                        i_player = i_player_sug;
                        lastmove = 1;
                    }
                } else {
                    j_player = j_player_sug;
                    lastmove = 4;
                }
            } else {
                i_player = i_player_sug;
                lastmove = 3;
            }
        } else {
            j_player = j_player_sug;
            lastmove = 2;
        }
    } else {
        i_player = i_player_sug;
        lastmove = 1;
    }
}



int main() {
    
    while (forever) {
        draw_player();
        create_board();
        scored = true;
        score = 15;

        //game loop:
        while (alive) {
            checks();
            update_player(); //reduce snake values by 1
            player[i_player][j_player] = score; //draw new player position
            if (scored) {
                spawn_new_food(); //spawn new food
                scored = false;
            }
            cout << "score: " << score << endl;
            if (!alive) {
                cout << "game over" << endl;
                break;
            }
            draw_board();
            if (score >= 2*boardsize) {
                getmove_state2();
            } else {
                getmove_state1();
            }
            movements ++;
            sleep();
        }
        
        cout << "---------------------------"<< endl;
        if (score > highscore) {
            highscore = score;
            cout << "NEW HIGHSCORE: " << highscore << endl;
        } else {
            cout << "score: " << score << endl;
            cout << "highscore: " << highscore << endl;
        }
        cout << "movements: " << movements << endl;
        sleep2();
        alive = true;
    }
    return 0;
}
